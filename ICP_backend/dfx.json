{
  "canisters": {
    "backend": {
      "main": "backend/app.mo",
      "type": "motoko",
      "dependencies": ["llm_analyzer"],
      "args": "--enhanced-orthogonal-persistence"
    },
    "llm_analyzer": {
      "main": "backend/llm_analyzer.mo",
      "type": "motoko"
    },
    "frontend": {
      "dependencies": ["backend"],
      "frontend": {
        "entrypoint": "frontend/index.html"
      },
      "source": ["frontend/dist"],
      "type": "assets"
    }
  },
  "output_env_file": ".env",
  "defaults": {
    "build": {
      "packtool": "mops sources"
    }
  }
}
